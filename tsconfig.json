{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "lib": [
      "dom", "es5"
    ],
    "target": "es5",
    "watch": true
  },
  "exclude": [
    "node_modules"
  ]
}